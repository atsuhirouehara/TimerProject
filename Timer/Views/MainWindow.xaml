<Window x:Class="Timer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Timer"
        mc:Ignorable="d"
        Title="Timer" Height="195" Width="369" ResizeMode="CanMinimize">
    <Grid Margin="0,0,0,-6">
            <Label x:Name="lblTime" />
            <Button Content="Start" Style="{StaticResource Button_Start_Style}" Click="Button_Start"/>
            <Button Content="Stop" Style="{StaticResource Button_StopAndReset_style}" Click="Button_StopAndReset"/>
            <Button Content="Save" Style="{StaticResource Button_Save_style}" Click="Button_Save"/>
    </Grid>
</Window>
