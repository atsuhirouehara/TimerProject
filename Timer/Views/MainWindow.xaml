<Window x:Class="Timer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Timer"
        mc:Ignorable="d"
        Topmost="True"
        Title="Timer" Height="215" Width="369" ResizeMode="CanMinimize">
    <Grid Height="179" VerticalAlignment="Top">

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock x:Name="timerTextBlock" FontSize="36">00:00</TextBlock>

        <StackPanel Style="{StaticResource Button_Style}">
            <Button x:Name="btnStartAndStop" Style="{StaticResource Button_StartAndStop_Style}" Click="Button_StartAndStop"/>
            <Button x:Name="btnReset" Style="{StaticResource Button_Reset_style}" Click="Button_Reset"/>
            <Button x:Name="btnSave" Style="{StaticResource Button_Save_style}" Click="Button_Save"/>
        </StackPanel>
    </Grid>
</Window>
